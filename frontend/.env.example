# Frontend Environment Variables Template
# Copy this file to .env.local and fill in your actual API keys
# NEVER commit .env.local to Git!

# ============================================
# BACKEND API
# ============================================

# Backend API URL (development)
VITE_API_BASE_URL=http://localhost:8080/api/v1

# For production, this will be set by the build process:
# VITE_API_BASE_URL=https://your-backend-url.run.app/api/v1

# ============================================
# GOOGLE SERVICES
# ============================================

# Google Maps JavaScript API (for map display)
VITE_GOOGLE_MAPS_BROWSER_KEY=

# Google OAuth Client ID (for authentication)
VITE_GOOGLE_CLIENT_ID=

# ============================================
# THIRD-PARTY APIS (optional)
# ============================================

# OpenWeather API (for weather information)
VITE_OPENWEATHER_API_KEY=

# ============================================
# DEVELOPMENT SETTINGS
# ============================================

# Disable Firebase authentication for local development
VITE_DISABLE_AUTH=false

# Enable debug mode
VITE_DEBUG=false
