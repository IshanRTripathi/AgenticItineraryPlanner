# Environment Variables for Agentic Itinerary Planner

# Database Configuration
APP_DATABASE_TYPE=firestore
FIRESTORE_USE_EMULATOR=true
FIRESTORE_EMULATOR_HOST=localhost:8080
FIRESTORE_ENABLED=true
FIRESTORE_CREDENTIALS_FILE=tripplanner-bdd3c-firebase-adminsdk-fbsvc-633254ef65.json
GCP_PROJECT_ID=tripplanner-bdd3c

# For production, set these:
# APP_DATABASE_TYPE=firestore
# FIRESTORE_USE_EMULATOR=false
# FIRESTORE_CREDENTIALS={"type":"service_account",...}
# GCP_PROJECT_ID=tripplanner-bdd3c

# Google AI (Gemini)
GEMINI_API_KEY=your-gemini-api-key
GEMINI_MOCK_MODE=true

# Google OAuth (optional)
GOOGLE_OAUTH_CLIENT_ID=your-oauth-client-id
GOOGLE_OAUTH_CLIENT_SECRET=your-oauth-client-secret

# Razorpay (optional)
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-key-secret

# Email (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@yourdomain.com

# Application URLs
FRONTEND_URL=http://localhost:3000
APP_BASE_URL=http://localhost:8080
