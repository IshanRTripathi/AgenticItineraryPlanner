# Agentic Itinerary Planner - Environment Variables Template
# Copy this file to .env and fill in your actual API keys
# NEVER commit .env to Git!

# ============================================
# LLM PROVIDERS (at least one required)
# ============================================

# Google Gemini (recommended for itinerary generation)
GEMINI_API_KEY=
GEMINI_MODEL=gemini-2.5-flash
GEMINI_TEMPERATURE=0.7
GEMINI_MAX_TOKENS=65535
GEMINI_MOCK_MODE=false

# OpenRouter (alternative LLM provider)
OPENROUTER_API_KEY=
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_TIMEOUT_SECONDS=180

# AI Provider Selection
AI_PROVIDER=openrouter
AI_MODEL=qwen/qwen-2.5-72b-instruct:free
AI_TEMPERATURE=0.7
AI_MAX_TOKENS=8192
AI_MOCK_MODE=false

# ============================================
# GOOGLE SERVICES (required)
# ============================================

# Google Places API (required for place search and enrichment)
GOOGLE_PLACES_API_KEY=
GOOGLE_PLACES_DAILY_LIMIT=1000
GOOGLE_PLACES_RATE_LIMIT_ENABLED=true

# Google OAuth (optional, for user authentication)
GOOGLE_OAUTH_CLIENT_ID=
GOOGLE_OAUTH_CLIENT_SECRET=

# ============================================
# FIREBASE / FIRESTORE (required)
# ============================================

FIRESTORE_PROJECT_ID=tripplanner-bdd3c
FIRESTORE_CREDENTIALS_FILE=path/to/firebase-credentials.json
FIRESTORE_USE_EMULATOR=false
FIRESTORE_EMULATOR_HOST=localhost:8080
FIRESTORE_ENABLED=true

# ============================================
# BOOKING INTEGRATIONS (optional)
# ============================================

# Expedia API
EXPEDIA_API_KEY=
EXPEDIA_RATE_LIMIT_ENABLED=true
EXPEDIA_TIMEOUT=30000

# Booking.com API
BOOKING_COM_API_KEY=
BOOKING_COM_PARTNER_ID=
BOOKING_COM_TIMEOUT=30000

# ============================================
# PAYMENT GATEWAY (optional)
# ============================================

# Razorpay
RAZORPAY_ENABLED=false
RAZORPAY_KEY_ID=
RAZORPAY_KEY_SECRET=
RAZORPAY_WEBHOOK_SECRET=
RAZORPAY_ENVIRONMENT=test
RAZORPAY_RATE_LIMIT_ENABLED=true
RAZORPAY_TIMEOUT=30000

# ============================================
# EMAIL CONFIGURATION (optional)
# ============================================

SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
EMAIL_FROM=noreply@example.com
EMAIL_FROM_NAME=Agentic Itinerary Planner

# ============================================
# APPLICATION SETTINGS
# ============================================

# Server
SERVER_PORT=8080

# Logging
LOG_LEVEL=INFO
APP_LOG_LEVEL=INFO
SECURITY_LOG_LEVEL=DEBUG
GCP_LOG_LEVEL=INFO

# Itinerary Generation
ITINERARY_GENERATION_MODE=monolithic
ITINERARY_PIPELINE_PARALLEL=true
ITINERARY_SKELETON_BATCH_SIZE=1

# Application Limits
MAX_ITINERARY_DAYS=30
MAX_PARTY_SIZE=20
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,es,fr,de,it,pt,ja,ko,zh

# Rate Limiting
RATE_LIMIT_RPM=100
RATE_LIMIT_BURST=200

# Cache
CACHE_TTL_MINUTES=60

# Monitoring (optional)
PROMETHEUS_ENABLED=false

# ============================================
# DEVELOPMENT / CLOUD DEPLOYMENT
# ============================================

# GCP Project (for Cloud Run / GKE)
GCP_PROJECT_ID=tripplanner-bdd3c

# App Base URL (change for production)
APP_BASE_URL=http://localhost:8080

# PDF Generation
PDF_BASE_URL=http://localhost:8080
PDF_TEMPLATE_PATH=classpath:/templates/pdf/
