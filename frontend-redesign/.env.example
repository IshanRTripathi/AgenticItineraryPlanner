# Local Development Environment Variables
# Copy this file to .env and fill in your actual values
# NOTE: Vite requires VITE_ prefix for variables to be exposed to the client

# ============================================
# BACKEND CONFIGURATION (Server-side only)
# ============================================

# Firestore Configuration
FIRESTORE_USE_EMULATOR=false
FIRESTORE_EMULATOR_HOST=localhost:8080
GCP_PROJECT_ID=tripaiplanner
FIRESTORE_PROJECT_ID=tripaiplanner-4c951
FIRESTORE_CREDENTIALS_FILE=firestore_credentials.json

FIREBASE_AUTH_ENABLED=true

# Database
APP_DATABASE_TYPE=firestore

# Google AI (Gemini) - Backend only
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MOCK_MODE=false

# ============================================
# FRONTEND CONFIGURATION (Vite - Client-side)
# ============================================

# Application URLs
VITE_FRONTEND_URL=http://localhost:5173
VITE_APP_BASE_URL=http://localhost:8080
VITE_API_BASE_URL=http://localhost:8080/api/v1
VITE_WS_URL=ws://localhost:8080

# Google Maps API (CRITICAL - Required for map functionality)
# Get your API key from: https://console.cloud.google.com/google/maps-apis
VITE_GOOGLE_MAPS_API_KEY=your-google-maps-api-key-here
VITE_GOOGLE_PLACES_API_KEY=your-google-places-api-key-here

# Firebase Configuration (Frontend)
# Get these from: https://console.firebase.google.com/project/tripaiplanner-4c951/settings/general
VITE_FIREBASE_API_KEY=your-firebase-api-key-here
VITE_FIREBASE_AUTH_DOMAIN=tripaiplanner-4c951.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=tripaiplanner-4c951
VITE_FIREBASE_STORAGE_BUCKET=tripaiplanner-4c951.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your-sender-id-here
VITE_FIREBASE_APP_ID=your-app-id-here

# Google Analytics (Optional)
VITE_GA_TRACKING_ID=

# Weather API (Optional - for real weather data)
# Get your API key from: https://openweathermap.org/api
VITE_WEATHER_API_KEY=

# Feature Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_PWA=false
VITE_ENABLE_MOCK_DATA=false

# Development Settings
VITE_DEV_MODE=true
VITE_LOG_LEVEL=debug
