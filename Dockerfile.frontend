# Multi-stage build for React frontend
FROM node:18-alpine AS build

# Set working directory
WORKDIR /app

# Copy package files first for better caching
COPY frontend/package*.json ./

# Install dependencies (including dev dependencies for build)
RUN npm ci

# Copy source code
COPY frontend/ ./

# Set build arguments
ARG BACKEND_URL
ARG VITE_WS_BASE_URL
ARG VITE_GOOGLE_MAPS_BROWSER_KEY
ENV VITE_API_BASE_URL=${BACKEND_URL}/api/v1
ENV VITE_WS_BASE_URL=${VITE_WS_BASE_URL}
ENV VITE_GOOGLE_MAPS_BROWSER_KEY=${VITE_GOOGLE_MAPS_BROWSER_KEY}

# Build the application
RUN npm run build

# Production stage with nginx
FROM nginx:alpine

# Remove default nginx config
RUN rm /etc/nginx/conf.d/default.conf

# Copy built assets from build stage
COPY --from=build /app/dist /usr/share/nginx/html

# Create entrypoint script for runtime config injection
RUN echo '#!/bin/sh\n\
# Replace placeholders in config.js with actual environment variables\n\
if [ -f /usr/share/nginx/html/config.js ]; then\n\
  echo "Injecting runtime configuration..."\n\
  sed -i "s|__GOOGLE_MAPS_API_KEY__|${VITE_GOOGLE_MAPS_BROWSER_KEY}|g" /usr/share/nginx/html/config.js\n\
  sed -i "s|__API_BASE_URL__|${VITE_API_BASE_URL}|g" /usr/share/nginx/html/config.js\n\
  sed -i "s|__WS_BASE_URL__|${VITE_WS_BASE_URL}|g" /usr/share/nginx/html/config.js\n\
  echo "Runtime config injected successfully"\n\
  cat /usr/share/nginx/html/config.js\n\
fi\n\
exec nginx -g "daemon off;"\n\
' > /docker-entrypoint.sh && chmod +x /docker-entrypoint.sh

# Create nginx config
RUN echo 'events { worker_connections 1024; } \
http { \
    include /etc/nginx/mime.types; \
    default_type application/octet-stream; \
    sendfile on; \
    keepalive_timeout 65; \
    server { \
        listen 80; \
        server_name _; \
        root /usr/share/nginx/html; \
        index index.html; \
        location / { \
            try_files $uri $uri/ /index.html; \
        } \
        location /health { \
            return 200 "healthy"; \
            add_header Content-Type text/plain; \
        } \
    } \
}' > /etc/nginx/nginx.conf

# Expose port
EXPOSE 80

# Use entrypoint script instead of direct nginx command
ENTRYPOINT ["/docker-entrypoint.sh"]
